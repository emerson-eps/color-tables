{
  "name": "@emerson-eps/color-tables",
  "version": "0.1.0",
  "prettier": "@emerson-eps/prettier-config",
  "description": "Standard library of color tables for geological domain",
  "release": {
    "branches": [
      "main"
    ]
  },
  "private": false,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "semantic-release": "semantic-release",
    "lint": "eslint . --max-warnings=0",
    "prettier": "prettier --ignore-path .gitignore --check \"**/*.{js,jsx,ts,tsx,json}\"",
    "prettier:format": "prettier --ignore-path .gitignore --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "format": "eslint --fix *json \"src/**/*.+(ts|tsx|js|jsx|json|css)\""
  },
  "dependencies": {
    "@equinor/eds-core-react": "^0.17.0",
    "d3": "^7.2.0",
    "d3-color": "^3.0.1",
    "d3-interpolate": "^3.0.1",
    "format": "^0.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.0",
    "web-vitals": "^1.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emerson-eps/color-tables.git"
  },
  "license": "MPL",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@emerson-eps/eslint-config": "^3.0.2",
    "@emerson-eps/prettier-config": "^1.0.3",
    "@storybook/addon-actions": "^6.4.17",
    "@storybook/addon-essentials": "^6.4.17",
    "@storybook/addon-links": "^6.4.17",
    "@storybook/react": "^6.4.17",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/d3": "^7.1.0",
    "@types/styled-components": "^5.1.23",
    "babel-loader": "^8.1.0",
    "eslint": "^8.11.0",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4"
  }
}
