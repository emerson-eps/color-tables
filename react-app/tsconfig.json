{
    "compilerOptions": {
      "baseUrl": "src",
      //"outDir": "build",
      "module": "es6",
      "target": "es6",
      //"lib": ["es6", "dom", "es2016", "es2017"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "declaration": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": ["./src"],
    "exclude": [ "" ]
}